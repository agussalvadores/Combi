<%if current_user && current_user.role == "admin"%>
<%= form_for @ciudad, :url => { :action => :create } do |f| %>

    <div>
        <%= f.label :nombre, "Nombre" %>
        <%= f.text_field :nombre, required: true  %>
    </div>
    <div>
        <%= f.label :provincia, "Provincia" %>
        <%= f.text_field :provincia , required: true %>
    </div>
    <div>
        <%= f.label :descrip, "Descripcion" %>
        <%= f.text_field :descrip, required: true  %>
    </div>
    <div>
        <%= f.label :url_img, "URL de la imagen" %>
        <%= f.text_field :url_img, required: true  %>
    </div>
    <div>
        <%= f.submit "Registrar ciudad" %>
    </div>
<% end %>
<%else%>
<div class="alert alert-danger">
"No tienes acceso suficiente"
</div>
<%end%>
