<%if current_user && current_user.role == "admin"%>
<%= form_for @combi, :url => { :action => :create } do |f| %>
 <div class="field">
  <%= f.label :patente,"Patente" %><br />
  <%= f.text_field :patente,required: true %>
</div>
<div class="field">
 <%= f.label :tipo,"Tipo de asiento" %><br />
 <%= f.select :tipo,
       options_for_select(Combi.tipos) %>
</div>
   <div class="field">
   <%= f.label :cant_asientos, "Cantidad de asientos" %><br />
  <%= f.number_field :cant_asientos, required: true %>
</div>
<div class="field">
 <%= f.label :descripcion,"Descripción" %><br />
  <%= f.text_area :descripcion%>
</div>
<div class="Actions">
  <%= f.submit "Guardar cambios"%>
</div>
<% end %>
<%else%>
<div class="alert alert-danger">
 "No tienes acceso suficiente"
 </div>
 <%= render "combis/shared/error_messages", resource: combi%>
<% end %>

<%=link_to "Atrás", combis_path %>
