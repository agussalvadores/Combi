<%if current_user && current_user.role == "admin"%>
	<h1> Listado de Insumos</h1>
	<%= link_to "Agregar un nuevo insumo", insumos_new_path %>
	  <div class="container-fluid">
  	  <table class="table">
  	  <thead class="thead-dark">
  	  <tr align="center">

		<thead>
			<th> Nombre </th>
			<th> Precio </th>
			<th> Url_img </th>
			<th colspan=3></th>
		</thead>
	<% @insumos.each do |insumo| %>
	<tr>
		<td><%= insumo.nombre %></td>
		<td><%= insumo.precio %></td>
		<td><%= insumo.url_img %></td>

		<td>
		<%= link_to "Editar", edit_insumo_path(insumo) %>
		<%= link_to "Eliminar", insumo, method: :delete, data: { confirm: "¿Seguro que desea eliminar el insumo?"}%>
		</td>
	</tr>
	<% end %>


 <%else%>
<div class="alert alert-danger">
	"No tienes acceso suficiente"
	</div>
<%end%>
<br/> <%= link_to "Atrás", viajes_buscador_path %>
